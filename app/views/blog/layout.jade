extends  ../layout

append css
  link(rel='stylesheet',href='/css/blog.css')
block main
  //导航栏的内容
  block header
    .blog-masthead
      .container
        nav.blog-nav
          if pageName=="/"
              a.blog-nav-item.active(href="/") 首页
          else
              a.blog-nav-item(href="/") 首页
          if pageName=="/contact"
              a.blog-nav-item.active(href="/contact") 关于
          else
              a.blog-nav-item(href="/contact") 关于
          if pageName=="/about"
              a.blog-nav-item.active(href="/about") 练习
          else
            a.blog-nav-item(href="/about") 练习
  .container
      .row
        .col-sm-8.blog-main
           //主要内容区域
           block content
        .col-sm-3.col-sm-offset-1.blog-sidebar
          .sidebar-module
             h4 文章分类
             ol.list-unstyled
               li
                  a(href="#") March 2014
               li
                  a(href="#") February 2014
               li
                  a(href="#") January 2014
               li
                  a(href="#") December 2013
          .sidebar-module
             h4 友情链接
             ol.list-unstyled
                li
                   a(href="#") GitHub
                li
                   a(href="#") Twitter
                li
                   a(href="#") Facebook

  block footer
    footer.blog-footer
      p
        a(href="http://getbootstrap.com") Bootstrap
        a(href="https://twitter.com/modo") @mdo
      p
        a(href="#") Back to top
