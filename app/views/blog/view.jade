extends layout

block content
    h2.page-header.post-view-header
        = post.title
    div.post.post-view
      div.post-meta
        span.post-created
          i.fa.fa-created &nbsp;
          = moment(post.created).format('YYYY-MM-DD HH:mm:ss')
        span.post-author
          i.fa.fa-user &nbsp;
          = post.author.name
        span.post-category
          i.fa.fa-shopping-basket &nbsp;
          a(href="/posts/category/" + post.category.name,target="_blank")
            = post.category.name
        span.post-comments
          i.fa.fa-comment &nbsp;
          =post.comments.length || 0
        span.post-favrite
          a(href="/posts/favorite/" + post._id)
            i.fa.fa-star &nbsp;
            =post.meta.favorites || 0
      div.post-content
          = post.content
      div.post-comments
         h3 用户评论

         div.post-comment-list
            if post.comments.length
               each comment in post.comments
                 div.post-comment-item
                   h4.post-comment
            else
                p.alert.alert-info 还没有评论
         form.post-comment-form(action="/posts/comment/"+post_id,method="post",enctype="application/x-www-form-urlencoded")
             h3 添加评论
             div.form-group
                label(for="email") 邮箱
                input.form-control(type="text",name="email",placeholder="请输入邮箱" id="email")
                label(for="content") 内容
                textarea.form-control(type="text",name="content",placeholder="请输入邮箱" id="content")
             button.btn.btn-primary 提交
block scripts
  script $(document).ready(function () {console.log('dom ready');})


